{
    "name": "artarts36/str",
    "description": "String Wrapper",
    "type": "library",
    "require": {
        "php": ">=7.2",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3",
        "artarts36/php-cs-fixer-good-fixers": "^0.1.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "ArtARTs36",
            "email": "temicska99@mail.ru"
        }
    ],
    "autoload": {
        "psr-4": {
            "ArtARTs36\\Str\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ArtARTs36\\Str\\Tests\\": "tests/",
            "ArtARTs36\\Str\\Docs\\": "docs/Builder"
        }
    },
    "scripts": {
        "lint": [
            "php-cs-fixer fix --dry-run --verbose --diff --ansi --allow-risky=yes"
        ],
        "test": [
            "./vendor/bin/phpunit -v --coverage-text --colors=always --configuration phpunit.xml"
        ]
    }
}
